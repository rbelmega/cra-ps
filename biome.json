{
	"$schema": "https://biomejs.dev/schemas/latest/schema.json",
	"files": {
		"includes": ["*", "!node_modules", "!.next"]
	},
	"formatter": {
		"enabled": true,
		"indentWidth": 2,
		"lineWidth": 100
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"a11y": {
				"useValidLang": "warn"
			}
		}
	}
}
